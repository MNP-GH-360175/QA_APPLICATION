@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Updation Log Monitor";
}

<div class="content-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0 text-primary fw-bold">
            <i class="fas fa-microchip me-3"></i>Updation Log Monitor
        </h2>
        <small class="text-muted">Live search and Excel-like sorting on In Time / Out Time</small>
    </div>

    <!-- Date Range Form -->
    <div class="card shadow mb-4">
        <div class="card-header bg-primary text-white fw-bold">
            Select Date Range
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Index", "ProcedureMonitor", FormMethod.Post, new { @class = "row g-3 align-items-end" }))
            {
                @Html.AntiForgeryToken()
                <div class="col-md-4">
                    <label class="form-label fw-bold">From Date</label>
                    <input type="date" name="fromDate" class="form-control form-control-lg" value="@ViewBag.FromDate" required />
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-bold">To Date</label>
                    <input type="date" name="toDate" class="form-control form-control-lg" value="@ViewBag.ToDate" required />
                </div>
                <div class="col-md-4 text-md-end">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fas fa-check me-2"></i>Confirm
                    </button>
                </div>
            }
        </div>
    </div>

    @if (ViewBag.ShowResults == true)
    {
        <!-- Live Search -->
        <div class="card shadow mb-4">
            <div class="card-header bg-info text-white fw-bold">
                Search Procedure (Type to filter instantly)
            </div>
            <div class="card-body">
                <input type="text" id="liveSearch" class="form-control form-control-lg"
                       placeholder="Start typing procedure name..." autocomplete="off" />
            </div>
        </div>

        <!-- Table with Sorting -->
        <div class="card shadow">
            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-table me-2"></i>Execution Details</h5>
                <small id="recordInfo">
                    Showing @Model.Count record(s)
                </small>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0" id="procedureTable">
                        <thead class="bg-light text-dark fw-semibold">
                            <tr>
                                <th class="text-center" style="width:80px;">S.No</th>
                                <th>Module / Procedure Name</th>
                                <th class="text-center sortable cursor-pointer" data-sort="inTime">
                                    In Time <i class="fas fa-sort-down ms-1" id="inTimeIcon"></i>
                                </th>
                                <th class="text-center sortable cursor-pointer" data-sort="outTime">
                                    Out Time <i class="fas fa-sort ms-1" id="outTimeIcon"></i>
                                </th>
                                <th class="text-center" style="width:160px;">Status</th>
                            </tr>
                        </thead>
                        <tbody id="tableBody">
                            @if (Model == null || Model.Count == 0)
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-5 text-muted">
                                        <i class="fas fa-info-circle fa-4x mb-3 text-primary"></i>
                                        <h5>No records found</h5>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (var item in Model)
                                {
                                    string rowClass = item.IsRunningToday ? "table-success" : "table-danger";
                                    string inTimeSort = item.InTime == "-" ? "0000-00-00 00:00:00" : item.InTime.Replace(" AM", "").Replace(" PM", "");
                                    string outTimeSort = item.OutTime == null ? "0000-00-00 00:00:00" : item.OutTime.Replace(" AM", "").Replace(" PM", "");

                                    <tr class="@rowClass" data-module="@item.ModuleName.ToLower()"
                                        data-in-time="@inTimeSort" data-out-time="@outTimeSort">
                                        <td class="text-center fw-bold serial-no"></td>
                                        <td class="fw-medium">@item.ModuleName</td>
                                        <td class="text-center">@(string.IsNullOrEmpty(item.InTime) ? "-" : item.InTime)</td>
                                        <td class="text-center">
                                            @if (item.OutTime == null)
                                            {
                                                <i class="fas fa-times-circle text-danger" style="font-size: 2rem;" title="Out Time Missing"></i>
                                            }
                                            else
                                            {
                                                @item.OutTime
                                            }
                                        </td>
                                        <td class="text-center">
                                            <span class="badge @(item.IsRunningToday ? "bg-success" : "bg-danger") px-4 py-2">
                                                @item.StatusText
                                            </span>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-calendar-alt fa-5x text-muted mb-4"></i>
            <h4 class="text-muted">Please select a date range and click Confirm to view execution details</h4>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const tableBody = document.getElementById("tableBody");
            const rowsArray = Array.from(tableBody.querySelectorAll("tr[data-module]"));
            const liveSearch = document.getElementById("liveSearch");
            const recordInfo = document.getElementById("recordInfo");
            const inTimeHeader = document.querySelector("[data-sort='inTime']");
            const outTimeHeader = document.querySelector("[data-sort='outTime']");
            const inTimeIcon = document.getElementById("inTimeIcon");
            const outTimeIcon = document.getElementById("outTimeIcon");

            let currentSort = { column: 'inTime', direction: 'desc' };

            // Parse time string like "11:48:35 AM" to comparable format
            function parseTime(timeStr) {
                if (timeStr === "-" || !timeStr) return new Date(0); // earliest for null
                const [time, period] = timeStr.split(' ');
                let [hours, minutes, seconds] = time.split(':').map(Number);
                if (period === 'PM' && hours !== 12) hours += 12;
                if (period === 'AM' && hours === 12) hours = 0;
                const date = new Date();
                date.setHours(hours, minutes, seconds);
                return date;
            }

            function sortRows() {
                const filter = liveSearch.value.toLowerCase();

                let filteredRows = rowsArray.filter(row => {
                    const module = row.getAttribute("data-module");
                    return module.includes(filter);
                });

                filteredRows.sort((a, b) => {
                    let aVal, bVal;

                    if (currentSort.column === 'inTime') {
                        aVal = parseTime(a.querySelector("td:nth-child(3)").textContent.trim());
                        bVal = parseTime(b.querySelector("td:nth-child(3)").textContent.trim());
                    } else {
                        const aOut = a.querySelector("td:nth-child(4)");
                        const bOut = b.querySelector("td:nth-child(4)");
                        aVal = aOut.querySelector("i") ? new Date(0) : parseTime(aOut.textContent.trim());
                        bVal = bOut.querySelector("i") ? new Date(0) : parseTime(bOut.textContent.trim());
                    }

                    if (currentSort.direction === 'asc') {
                        return aVal - bVal;
                    } else {
                        return bVal - aVal;
                    }
                });

                // Clear and re-append
                tableBody.innerHTML = "";
                filteredRows.forEach(row => tableBody.appendChild(row));

                // Renumber
                tableBody.querySelectorAll(".serial-no").forEach((td, i) => {
                    td.textContent = i + 1;
                });

                // Update info
                recordInfo.textContent = `Showing ${filteredRows.length} filtered record(s)`;
            }

            // Initial sort
            sortRows();
            inTimeIcon.className = "fas fa-sort-down ms-1";

            // Header clicks
            inTimeHeader.addEventListener("click", () => {
                if (currentSort.column === 'inTime') {
                    currentSort.direction = currentSort.direction === 'asc' ? 'desc' : 'asc';
                } else {
                    currentSort.column = 'inTime';
                    currentSort.direction = 'desc';
                }
                updateIcons();
                sortRows();
            });

            outTimeHeader.addEventListener("click", () => {
                if (currentSort.column === 'outTime') {
                    currentSort.direction = currentSort.direction === 'asc' ? 'desc' : 'asc';
                } else {
                    currentSort.column = 'outTime';
                    currentSort.direction = 'desc';
                }
                updateIcons();
                sortRows();
            });

            function updateIcons() {
                inTimeIcon.className = "fas fa-sort ms-1";
                outTimeIcon.className = "fas fa-sort ms-1";

                const activeIcon = currentSort.column === 'inTime' ? inTimeIcon : outTimeIcon;
                activeIcon.className = currentSort.direction === 'asc' ? "fas fa-sort-up ms-1" : "fas fa-sort-down ms-1";
            }

            // Live search
            liveSearch.addEventListener("input", sortRows);
        });
    </script>

    <style>
        .sortable {
            cursor: pointer;
            user-select: none;
        }

            .sortable:hover {
                background-color: #e9ecef !important;
            }
    </style>
}