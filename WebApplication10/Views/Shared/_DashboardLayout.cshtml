<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QA PROJECT</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
          integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- THIS LINE MAKES IT LOOK EXACTLY LIKE MANAPPURAM HR PORTAL -->
    <style>
        html { font-size: 14px !important; }
        body { font-size: 0.925rem; }
        .form-control, .form-select { font-size: 0.925rem !important; }
        .btn { font-size: 0.925rem !important; }
        .table { font-size: 0.925rem; }
    </style>
</head>
<body>

    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <button class="menu-toggle me-3" id="menuToggle">
                <i class="fas fa-bars"></i>
            </button>
            <a class="navbar-brand fw-bold" href="#">QUALITY ASSURANCE TEAM Portal</a>
            <div class="ms-auto">
                <div class="dropdown">
                    <a class="nav-link dropdown-toggle text-white d-flex align-items-center"
                       href="#" role="button" data-bs-toggle="dropdown">
                        <i class="fas fa-user-circle fa-xl me-2"></i>
                        <span id="navbarUserName">User</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#" id="logoutBtn">Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h5 class="text-white mb-0 fw-bold">Menu</h5>
        </div>
        <ul class="nav flex-column px-3 mt-3">
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")"
                   href="/Home/Dashboard">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "ReleaseStatus" ? "active" : "")"
                   href="/Home/ReleaseStatus">
                    <i class="fas fa-rocket"></i> Release Status
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "DailyVerification" ? "active" : "")"
                   href="/Home/DailyVerification">
                    <i class="fas fa-check-circle"></i> Daily Verification
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "QueryStatus" ? "active" : "")"
                   href="/Home/QueryStatus">
                    <i class="fas fa-search"></i> Query Status Check
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "ProcedureMonitor" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"
                   href="/ProcedureMonitor/Index">
                    <i class="fas fa-microchip"></i> Daily Procedure Monitor
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">CRF List</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Test Cases</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Bug Report</a>
            </li>
        </ul>
    </div>

    <div class="content">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const token = localStorage.getItem('jwtToken');
            const empName = localStorage.getItem('empName');
            if (!token || !empName) {
                window.location.href = '/Home/Login';
                return;
            }
            document.getElementById('navbarUserName').textContent = empName;

            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('sidebarOverlay');
            const toggle = document.getElementById('menuToggle');
            const body = document.body;

            const openSidebar = () => {
                sidebar.classList.add('show');
                overlay.classList.add('show');
                body.classList.add('sidebar-open'); // Triggers CSS lock
            };

            const closeSidebar = () => {
                sidebar.classList.remove('show');
                overlay.classList.remove('show');
                body.classList.remove('sidebar-open');
            };

            toggle.addEventListener('click', () => {
                if (sidebar.classList.contains('show')) {
                    closeSidebar();
                } else {
                    openSidebar();
                }
            });

            // Close only on overlay CLICK (not swipe/drag)
            overlay.addEventListener('click', closeSidebar);

            // Optional: Add a close button inside sidebar if needed
            // document.getElementById('closeSidebarBtn')?.addEventListener('click', closeSidebar);

            // Prevent any touchmove that might interfere
            document.addEventListener('touchmove', (e) => {
                if (sidebar.classList.contains('show')) {
                    // Only allow vertical scroll
                    const touch = e.touches[0];
                    const deltaX = Math.abs(touch.clientX - (touch.startX || touch.clientX));
                    const deltaY = Math.abs(touch.clientY - (touch.startY || touch.clientY));
                    touch.startX = touch.clientX;
                    touch.startY = touch.clientY;

                    if (deltaX > deltaY && deltaX > 10) {
                        e.preventDefault(); // Block horizontal swipe
                    }
                }
            }, { passive: false });

            // Logout confirmation
            document.getElementById('logoutBtn')?.addEventListener('click', e => {
                e.preventDefault();
                if (confirm('Are you sure you want to logout?')) {
                    localStorage.clear();
                    window.location.href = '/Home/Login';
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>