@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <!-- Prevent swipe back/forward gestures -->
    <style>
        body {
            overscroll-behavior-x: none;
            touch-action: pan-y pinch-zoom;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Left Side: Welcome + Icon -->
        <div class="left-side">
            <div class="user-icon">
                <i class="fas fa-user"></i>
            </div>
            <h1>Welcome.</h1>
            <p>Welcome to Quality Assurance Department Manappuram finance limited</p>
        </div>
        <!-- Right Side: Login Form -->
        <div class="right-side">
            <h2>Employee Login</h2>
            <form id="loginForm" autocomplete="off">
                <!-- Hidden dummy inputs to confuse browser autofill -->
                <input type="text" style="display:none;" autocomplete="off" />
                <input type="password" style="display:none;" autocomplete="new-password" />

                <div class="form-group">
                    <label for="EmpCode">EmpCode</label>
                    <input type="text" id="EmpCode" autocomplete="nope" readonly required autofocus />
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    <input type="password" id="Password" autocomplete="new-password" readonly required />
                </div>
                <button type="submit" class="btn-login">Login</button>
            </form>
            <div id="errorMessage"></div>
        </div>
    </div>
    <script>
        // Prevent swipe back/forward
        document.addEventListener('touchstart', function (e) {
            const edgeMargin = 60;
            const touch = e.touches[0];
            if (touch && (touch.pageX < edgeMargin || touch.pageX > (window.innerWidth - edgeMargin))) {
                e.preventDefault();
            }
        }, { passive: false });
        if (history.replaceState) {
            history.replaceState(null, null, location.href);
        }

        // Remove readonly on focus (prevents initial autofill)
        document.getElementById("EmpCode").addEventListener("focus", function () {
            this.removeAttribute("readonly");
        });
        document.getElementById("Password").addEventListener("focus", function () {
            this.removeAttribute("readonly");
        });

        document.getElementById("loginForm").addEventListener("submit", async function (e) {
            e.preventDefault();
            const empCode = document.getElementById("EmpCode").value.trim();
            const password = document.getElementById("Password").value;
            const errorDiv = document.getElementById("errorMessage");
            errorDiv.textContent = "";
            errorDiv.style.color = "red";
            if (!empCode || !password) {
                errorDiv.textContent = "Please enter both EmpCode and Password";
                return;
            }
            try {
                console.log("Attempting login:", empCode);
                const response = await fetch('/api/Auth/login', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ EmpCode: empCode, Password: password })
                });
                console.log("Status:", response.status);
                const text = await response.text();
                console.log("Raw response:", text);
                let data;
                try {
                    data = JSON.parse(text);
                } catch (err) {
                    errorDiv.textContent = "Invalid server response";
                    return;
                }
                if (response.ok && data.token) {
                    console.log("Login successful!", data);
                    localStorage.setItem('jwtToken', data.token);
                    localStorage.setItem('empName', data.empName || "User");
                    localStorage.setItem('empCode', data.empCode || empCode);
                    errorDiv.style.color = "green";
                    errorDiv.textContent = "Login successful! Redirecting...";
                    window.location.replace("/Home/Dashboard");
                } else {
                    errorDiv.textContent = data.message || "Invalid EmpCode or Password";
                }
            } catch (err) {
                console.error("Error:", err);
                errorDiv.textContent = "Network error. Please try again.";
            }
        });
    </script>
</body>
</html>